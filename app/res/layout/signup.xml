<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCECD5"
    android:padding="38dp"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" >
        <TextView
            android:id="@+id/title"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italianno_regular"
            android:text="Niche"
            android:textAlignment="center"
            android:textColor="#295818"
            android:textSize="90sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70sp"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter username"
            android:textSize="25sp"
            android:background="#CDE5C2"
            android:padding="8dp"
            android:layout_marginBottom="36dp"/>

        <EditText
            android:id="@+id/create_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Create password"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="#CDE5C2"
            android:padding="8dp"
            android:layout_marginBottom="36dp"/>

        <EditText
            android:id="@+id/confirm_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cofirm password"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="#CDE5C2"
            android:padding="8dp"
            android:layout_marginBottom="66dp"/>

        <Button
            android:id="@+id/sub_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="24dp"
            android:backgroundTint="#AB295818"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>